<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent" android:layout_width="fill_parent"
android:background="#fff" android:orientation="vertical">

<TextView android:layout_width="wrap_content"
android:layout_height="wrap_content" android:layout_gravity="center"
android:textColor="#333" android:textSize="30sp" android:text="@string/title"/>

<ScrollView android:layout_height="fill_parent"
android:layout_width="fill_parent">

<TextView android:textColor="#333" android:layout_gravity="center"
android:layout_height="wrap_content" android:layout_width="fill_parent"
android:gravity="center" android:textSize="25sp" android:text="@string/wait"
android:id="@+id/textOut"></TextView>
</ScrollView>
</LinearLayout>